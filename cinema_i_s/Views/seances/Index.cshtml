@model IEnumerable<cinema_i_s.Models.seance>

@{
    ViewBag.Title = "Сеанс";
}

@using (Html.BeginForm("Index", "seances", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <input type="text" name="search" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Найти" class="btn btn-default" />
        </div>
    </div>
}
<p>
    @Html.ActionLink("Создать новую запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Сотрудник
        </th>
        <th>
           Название фильма
        </th>
        <th>
            Название зала
        </th>
        <th>
            Дата сенанса
        </th>
        <th>
           Время сеанса
        </th>
        <th>
            Формат фильма
        </th>
        <th>
            Цена
        </th>
           <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.associate.age)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.film.name_film)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.hall.name_hall)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.date)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.time)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.movie_format)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.price)
            </td>
            <td>
                @Html.ActionLink("Изменить запись", "Edit", new { id = item.seance_id }) |
                @Html.ActionLink("Подробно", "Details", new { id = item.seance_id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.seance_id })
            </td>
        </tr>
    }

</table>
