@model IEnumerable<cinema_i_s.Models.hall>

@{
    ViewBag.Title = "Зал";
}
@using (Html.BeginForm("Index", "halls", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <input type="text" name="search" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Найти" class="btn btn-default" />
        </div>
    </div>
}
<p>
    @Html.ActionLink("Создать новую запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название зала
        </th>
        <th>
            Вместительность
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name_hall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.capacity)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.holl_id }) |
                @Html.ActionLink("Подробно", "Details", new { id = item.holl_id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.holl_id })
            </td>
        </tr>
    }

</table>
