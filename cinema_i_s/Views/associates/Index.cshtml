@model IEnumerable<cinema_i_s.Models.associate>

@{

                ViewBag.Title = "Сотрудники";
}

@using (Html.BeginForm("Index", "Associates", FormMethod.Post))

{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <input type="text" name="search" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Найти" class="btn btn-default" />
        </div>
    </div>
}
<p>
    @Html.ActionLink("Создать новую запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
             ФИО
        </th>
        <th>
            Возраст
        </th>
        <th>
            Должность
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.full_name)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.associate_id }) |
                @Html.ActionLink("Подробно", "Details", new { id = item.associate_id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.associate_id })
            </td>
        </tr>
    }

</table>
